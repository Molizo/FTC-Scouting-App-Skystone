@page
@model SkystoneScouting.Pages.Events.EditModel

@{
    ViewData["Title"] = "Edit event";
}

@section Styles{
    <!--Bootstrap tags input CSS-->
    <link href="/vendor/@@adactive/bootstrap-tagsinput/dist/bootstrap-tagsinput.css" rel="stylesheet">
    <!-- Bootstrap Material Datetime Picker Css -->
    <link href="/vendor/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" />
}

<div class="block-header">
    <h2 style="font-weight:bolder;">
        Edit event
    </h2>
    <ol class="breadcrumb">
        <li>
            <a asp-page="Index">
                <i class="material-icons">event</i> Events
            </a>
        </li>
        <li class="active">
            <a asp-page="Create">
                <i class="material-icons">edit</i> Edit event
            </a>
        </li>
    </ol>
</div>

<form method="post">
    <input asp-for="Event.ID" hidden>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        EVENT INFO
                        <small>Let's talk about your event</small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-sm-8">
                            <h2 class="card-inside-title">What is the name of the event?</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="Event.Name" class="form-control">
                                    <label class="form-label">Event name</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <h2 class="card-inside-title">When will it take place?</h2>
                            <div class="input-daterange input-group" id="bs_datepicker_range_container">
                                <div class="form-line">
                                    <input asp-for="Event.StartDate" type="text" id="date-start" class="form-control datepicker" placeholder="Start date">
                                </div>
                                <span class="input-group-addon">to</span>
                                <div class="form-line">
                                    <input asp-for="Event.EndDate" type="text" id="date-end" class="form-control datepicker" placeholder="End date">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <h2 class="card-inside-title">Where will it take place?</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="Event.Address" class="form-control">
                                    <label class="form-label">Venue address</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12" style="margin-bottom:-20px;">
                            <h2 class="card-inside-title">Who will be scouting?</h2>
                            <div class="form-group demo-tagsinput-area">
                                <div class="form-line">
                                    <input asp-for="Event.AllowedUsers" type="text" data-role="tagsinput" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">

        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary waves-effect">EDIT EVENT</button>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!--Bootstrap tags input JS-->
    <script src="/vendor/@@adactive/bootstrap-tagsinput/dist/bootstrap-tagsinput.js"></script>
    <!-- Moment Plugin Js -->
    <script src="/vendor/moment/moment.js"></script>
    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script src="/vendor/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <!-- Datetime picker config-->
    <script>
        $(function () {
            $('.datepicker').bootstrapMaterialDatePicker({
                time: true,
                format: 'MM/DD/YYYY HH:mm:ss A'
            });
            $('#date-end').bootstrapMaterialDatePicker({ weekStart: 0 });
            $('#date-start').bootstrapMaterialDatePicker({ weekStart: 0 }).on('change', function (e, date) {
                $('#date-end').bootstrapMaterialDatePicker('setMinDate', date);
            });
        });
    </script>
}