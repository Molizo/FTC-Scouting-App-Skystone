@page
@model SkystoneScouting.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Events";
}

<div class="block-header">
    <h2 style="font-weight:bolder;">
        Events list
    </h2>
    <ol class="breadcrumb">
        <li class="active">
            <a asp-page="Index">
                <i class="material-icons">event</i> Events
            </a>
        </li>
    </ol>
</div>

@if (Model.CurrentEvents.Count != 0)
{
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Current events</h2>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    EVENT NAME
                                </th>
                                <th class="hidden-mobile hidden-tablet">
                                    START DATE
                                </th>
                                <th class="hidden-mobile hidden-tablet">
                                    END DATE
                                </th>
                                <th class="hidden-mobile hidden-tablet">
                                    VENUE ADDRESS
                                </th>
                                <th width="200px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Event in Model.CurrentEvents)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => Event.Name)
                                    </td>
                                    <td class="hidden-mobile hidden-tablet">
                                        @Html.DisplayFor(modelItem => Event.StartDate)
                                    </td>
                                    <td class="hidden-mobile hidden-tablet">
                                        @Html.DisplayFor(modelItem => Event.EndDate)
                                    </td>
                                    <td class="hidden-mobile hidden-tablet">
                                        @Html.DisplayFor(modelItem => Event.Address)
                                    </td>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group">
                                                <a asp-page="/Dashboard" asp-route-EventID="@Event.ID" class="btn btn-primary btn-lg waves-effect"><strong>SCOUT</strong></a>
                                                <a asp-page="Edit" asp-route-EventID="@Event.ID" class="btn btn-primary waves-effect hidden-mobile hidden-tablet"><i class="material-icons">mode_edit</i></a>
                                                <a asp-page="Delete" asp-route-EventID="@Event.ID" class="btn btn-primary waves-effect hidden-mobile hidden-tablet"><i class="material-icons">delete</i></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

