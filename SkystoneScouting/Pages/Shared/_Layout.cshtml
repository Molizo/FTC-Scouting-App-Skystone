<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewData["Title"] | FTC Scouting App</title>

    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="/vendor/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

    @RenderSection("Styles", false)

    <!-- Waves Effect Css -->
    <link href="/vendor/node-waves/dist/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="../../plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="../../css/style.css" rel="stylesheet">

    <!-- Page theme -->
    <link href="../../css/themes/theme-quantum.css" rel="stylesheet" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json">

    <!-- Browser improvements-->
    <meta name="apple-mobile-web-app-status-bar-style" content="white">
    <meta name="theme-color" content="#1D4294" />
    <link rel="apple-touch-icon" href="~/media/icons/512.png">
</head>
<body class="theme-quantum">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">

                <a href="javascript:void(0);" class="bars" style="display: none;"></a>
                <a class="navbar-brand font-20" href="/">FTC Scouting App</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                </ul>
            </div>
        </div>
    </nav>
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="user-info" style="height:135px; padding: 13px 15px 12px 15px;">
                    <div class="image">
                        @{
                            string GravatarID = SkystoneScouting.Services.CalculateHashes.CalculateMD5Hash(
                                UserManager.GetEmailAsync(
                                    UserManager.GetUserAsync(User).Result)
                                .Result
                                .TrimStart(' ')
                                .TrimEnd(' ')
                                .ToLower());
                        }
                        <img src="https://www.gravatar.com/avatar/@GravatarID?d=retro&r=x&s=48" width="48" height="48" alt="User" />
                    </div>
                    <div class="info-container">
                        <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            <strong>Hi, @User.Identity.Name</strong>
                        </div>
                        <div class="email">
                            <div>@UserManager.GetEmailAsync(UserManager.GetUserAsync(User).Result).Result</div>
                        </div>
                        <div class="btn-group user-helper-dropdown">
                            <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                            <ul class="dropdown-menu pull-right">
                                <li><a asp-area="Identity" asp-page="Account/Manage/Index"><i class="material-icons">person</i>Profile</a></li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a href="javascript:{}" class="hidden-mobile" onclick="document.getElementById('logoutForm').submit();"><i class="material-icons">exit_to_app</i>Logout</a>
                                </li>
                                <form asp-area="Identity" asp-page="Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new {area = ""})" method="post" id="logoutForm"></form>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="user-info">
                    <div class="info-container">
                        <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            <strong>Welcome</strong>
                        </div>
                        <div class="email">
                            <div>Please login</div>
                        </div>
                    </div>
                </div>
            }
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a asp-page="/Index">
                                <i class="material-icons">home</i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Identity" asp-page="/Account/Login">
                                <i class="material-icons">account_circle</i>
                                <span>Sign in</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Identity" asp-page="/Account/Register">
                                <i class="material-icons">person_add</i>
                                <span>Sign up</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-page="/Dashboard" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                                <i class="material-icons">dashboard</i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="header">Scouting</li>
                        <li>
                            <a asp-page="/Events/Index" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                                <i class="material-icons">event</i>
                                <span>Events</span>
                            </a>
                        </li>
                        @if (Context.Request.Query["EventID"].ToString() != String.Empty)
                        {
                            <li>
                                <a asp-page="/Schedule/Index" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                                    <i class="material-icons">schedule</i>
                                    <span>Schedule</span>
                                </a>
                            </li>
                            <li>
                                <a asp-page="/Teams/Index" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                                    <i class="material-icons">people</i>
                                    <span>Teams</span>
                                </a>
                            </li>
                            @if (Context.Request.Query["TeamID"].ToString() != String.Empty)
                            {
                                <li>
                                    <a asp-page="/Matches/Index" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                                        <i class="material-icons">flag</i>
                                        <span>Matches</span>
                                    </a>
                                </li>
                            }

                        }
                    }
                    <li class="header">Help</li>
                    <li>
                        <a asp-page="/Docs" asp-route-EventID="@Context.Request.Query["EventID"].ToString()" asp-route-TeamID="@Context.Request.Query["TeamID"].ToString()">
                            <i class="material-icons">book</i>
                            <span>Documentation</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2019 - 2020 <a href="https://qrobotics.eu">Quantum Robotics #14270</a>
                </div>
                <div class="version">
                    <b>Version: </b>@System.Reflection.Assembly.GetExecutingAssembly().GetName().Version.ToString().Substring(0, System.Reflection.Assembly.GetExecutingAssembly().GetName().Version.ToString().LastIndexOf('.'))
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        @RenderBody()
        <br />
        <br />
    </section>

    <!-- Jquery Core Js -->
    <script src="/vendor/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="/vendor/bootstrap/dist/js/bootstrap.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="/vendor/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="/vendor/node-waves/dist/waves.js"></script>

    <!-- Custom Js -->
    <script src="../../js/admin.js"></script>

    <!-- Demo Js -->
    <script src="../../js/demo.js"></script>

    <!-- Web App Service Worker-->
    <script>
        navigator.serviceWorker.register("../service_worker.js");
    </script>

    @RenderSection("Scripts", false)
</body>
</html>