@page
@model SkystoneScouting.Pages.ScoutedMatches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-route-EventID="@Model.eventID" asp-route-TeamID="@Model.teamID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].Alliance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].HumanPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].MajorPenalties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].MinorPenalties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].StartingPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoutedMatch[0].TeamID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScoutedMatch)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alliance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HumanPlayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MajorPenalties)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinorPenalties)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamID)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>