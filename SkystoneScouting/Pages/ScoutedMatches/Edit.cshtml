@page
@model SkystoneScouting.Pages.ScoutedMatches.EditModel

@{
    ViewData["Title"] = "Edit scouted match";
}

<div class="block-header">
    <h2 style="font-weight:bolder;">
        Edit scouted match
    </h2>
    <ol class="breadcrumb">
        <li>
            <a asp-page="/Events/Index">
                <i class="material-icons">event</i> Events
            </a>
        </li>
        <li>
            <a asp-page="/Teams/Index" asp-route-EventID="@Model.eventID">
                <i class="material-icons">people</i> Teams
            </a>
        </li>
        <li>
            <a asp-page="Index" asp-route-EventID="@Model.eventID" asp-route-TeamID="@Model.teamID">
                <i class="material-icons">flag</i> Scouted matches
            </a>
        </li>
        <li class="active">
            <a asp-page="Edit" asp-route-EventID="@Model.eventID" asp-route-TeamID="@Model.teamID">
                <i class="material-icons">edit</i> Edit scouted match
            </a>
        </li>
    </ol>
</div>

<form method="post">
    <input asp-for="ScoutedMatch.ID" hidden />
    <input asp-for="ScoutedMatch.TeamID" hidden />
    <div class="row clearfix">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        MATCH INFO
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-xs-6">
                            <h2 class="card-inside-title">Match type</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.MatchType" class="form-control">
                                        <option value="@Models.MatchType.Qualification">Qualification</option>
                                        <option value="@Models.MatchType.Semifinal">Semifinal</option>
                                        <option value="@Models.MatchType.Final">Final</option>

                                        <option value="@Models.MatchType.Practice">Practice</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <h2 class="card-inside-title">Match number</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.MatchNumber" class="form-control">
                                    <label class="form-label">Match number</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <h2 class="card-inside-title">Alliance</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Alliance" class="form-control">
                                        <option value="@Models.Alliance.Red">Red Alliance</option>
                                        <option value="@Models.Alliance.Blue">Blue Alliance</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.HumanPlayer" type="checkbox" id="humanPlayer" class="filled-in chk-col-blue">
                                <label for="humanPlayer">Human Player</label>
                            </div>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.RobotDisconnected" type="checkbox" id="robotDisconnected" class="filled-in chk-col-blue">
                                <label for="robotDisconnected">Robot Disconnected</label>
                            </div>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.RobotMalfunction" type="checkbox" id="robotMalfunction" class="filled-in chk-col-blue">
                                <label for="robotMalfunction">Robot Malfunction</label>
                            </div>
                        </div>
                        <div class="col-sm-12 padding-0">
                            <h2 class="card-inside-title p-l-15 p-r-15">Penalties</h2>
                            <div class="col-xs-6">

                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="ScoutedMatch.MinorPenalties" class="form-control">
                                        <label class="form-label">Minor Penalties</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input asp-for="ScoutedMatch.MajorPenalties" class="form-control">
                                        <label class="form-label">Major Penalties</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <h2 class="card-inside-title">Anything to add?</h2>
                            <div class="form-group form-group">
                                <div class="form-line">
                                    <textarea asp-for="ScoutedMatch.Description" rows="1" class="form-control no-resize auto-growth" style="overflow: hidden; overflow-wrap: break-word; height: 66px;" autocomplete="off"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        AUTONOMOUS INFO
                        <small>Info about the robot in the autonomous period</small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 1</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone1Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 2</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone2Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 3</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone3Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 4</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone4Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 5</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone5Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Stone 6</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_Stone6Type" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None / Other team</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <h2 class="card-inside-title"># Stones placed</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.Auto_StonesPlaced" class="form-control">
                                    <label class="form-label">Stones placed</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title"># Stones returned</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.Auto_StonesRetured" class="form-control">
                                    <label class="form-label">Stones returned</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" id="firstStoneReturned">
                            <h2 class="card-inside-title">1st Returned stone type</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select asp-for="ScoutedMatch.Auto_FirstReturnedStoneType" class="form-control">
                                        <option value="@Models.DeliveredStoneType.None">None</option>
                                        <option value="@Models.DeliveredStoneType.Stone">Stone</option>
                                        <option value="@Models.DeliveredStoneType.Skystone">Skystone</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Foundation repositioned</h2>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.Auto_FoundationRepositioned" type="checkbox" id="foundationRepositionedAuto" class="filled-in chk-col-blue">
                                <label for="foundationRepositionedAuto">Foundation repositioned</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Robot navigated</h2>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.Auto_RobotNavigated" type="checkbox" id="robotNavigated" class="filled-in chk-col-blue">
                                <label for="robotNavigated">Robot navigated</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        TELEOP INFO
                        <small>Info about the robot in the TeleOP period</small>
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <h2 class="card-inside-title"># Stones placed</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.TeleOP_StonesPlaced" class="form-control">
                                    <label class="form-label">Stones placed</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title"># Stones delivered</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.TeleOP_StonesDelivered" class="form-control">
                                    <label class="form-label">Stones delivered</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title"># Stones returned</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.TeleOP_StonesReturned" class="form-control">
                                    <label class="form-label">Stones returned</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Max height</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.TeleOP_TallestSkyscraperHeight" class="form-control">
                                    <label class="form-label">Max height</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Capstone Placed</h2>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.EndGame_CapstonePlaced" type="checkbox" id="capstonePlaced" class="filled-in chk-col-blue">
                                <label for="capstonePlaced">Capstone Placed</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Capstone height</h2>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input asp-for="ScoutedMatch.EndGame_CapstoneHeight" class="form-control">
                                    <label class="form-label">Capstone height</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Foundation moved</h2>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.EndGame_FoundationMoved" type="checkbox" id="foundationMovedEnd" class="filled-in chk-col-blue">
                                <label for="foundationMovedEnd">Foundation moved</label>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h2 class="card-inside-title">Robot parked</h2>
                            <div class="form-group form-float">
                                <input asp-for="ScoutedMatch.EndGame_RobotParked" type="checkbox" id="robotParked" class="filled-in chk-col-blue">
                                <label for="robotParked">Robot parked</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary waves-effect">EDIT SCOUTED MATCH</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Autosize Plugin JS -->
    <script src="/vendor/autosize/dist/autosize.min.js"></script>

    <script>
        var ta = document.querySelector('textarea');
        ta.style.display = 'none';
        autosize(ta);
        ta.style.display = '';

        // Call the update method to recalculate the size:
        autosize.update(ta);
    </script>
}